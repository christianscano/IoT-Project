{% extends 'base.html' %}

{% block title %}Home{% endblock %}

{% block header %}
<link rel="stylesheet" href="{{ url_for('frontend.static', filename='style/home.css') }}">
<script src="{{ url_for('frontend.static', filename='js/load.js') }}"></script>
{% endblock %}


{% block content %} 
<!-- Sidebar -->
<div class="sidebar col-3 col-md-3 col-xl-2 bg-body-tertiary border-end mh-100" style="overflow-y: scroll;">
    <div class="d-flex flex-column py-3">
        <!-- First part -->
        <nav class="nav nav-pills flex-column mb-auto">
            <a href="#" class="nav-link active" data-url="/dashboard">
                <i class="fa fa-dashboard"></i>
                <span class="ms-2 d-none d-sm-inline">Dashboard</span>
            </a>                        
            <a href="#" class="nav-link">
                <i class="fa fa-thermometer-3"></i>
                <span class="ms-2 d-none d-sm-inline">Temperature</span>
            </a>
            <a href="#" class="nav-link">
                <i class="fa fa-bell"></i>
                <span class="ms-2 d-none d-sm-inline">Intrusion</span>
            </a>
            <a href="#" class="nav-link">
                <i class="fa bi-person-lines-fill"></i>
                <span class="ms-2 d-none d-sm-inline">Logs</span>
            </a>
            <a href="#" 
                class="nav-link collapsed has-dropdown" 
                data-bs-toggle="collapse" 
                data-bs-target="#settings"
            >
                <i class="fa fa-cog"></i>
                <span class="ms-2 d-none d-sm-inline">Settings</span>
            </a>
            <ul id="settings" class="navbar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                <li class="nav-item">
                    <a href="#" class="nav-link">Users</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Accesses</a>
                </li>
            </ul>
        </nav>

        <!-- Second part - User settings -->
        <hr>
        <nav class="sidebar-footer nav nav-pills flex-column">
            <a href="#" 
                class="nav-link collapsed has-dropdown" 
                data-bs-toggle="collapse" 
                data-bs-target="#user-settings"
            >
                <i class="bi-person-circle"></i>
                <span class="ms-2 d-none d-sm-inline">User</span>
            </a>
            <ul id="user-settings" class="navbar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                <li class="nav-item">
                    <a href="#" class="nav-link">Change password</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">Logout</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
<!-- End Sidebar -->

<!-- Main content -->
<div class="col-9 col-md-9 col-xl-10 mh-100" style="overflow-y: scroll;">
    <div id="main-content" class="py-3 me-3 h-100">
    <!-- Content loaded dynamicaly -->
    </div>
</div>
{% endblock %}